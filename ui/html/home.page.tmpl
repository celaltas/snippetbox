{{template "base" .}}
{{define "title"}}
Home
{{ end }}
{{define "body"}}
{{if .Snippets}}
<table>
  <tr>
    <th>Title</th>
    <th>Created</th>
    <th>ID</th>
  </tr>
  {{
    range.Snippets
  }}
  <tr>
    <td>
      <a href="/snippet?id={{.ID}}">{{.Title}}</a>
    </td>
    <td>{{.Created}}</td>
    <td>#{{.ID}}</td>
  </tr>
  {{
    end
  }}
</table>
{{else}}
<h2>Latest Snippets</h2>
<p>There's nothing to see here yet!</p>

{{ end }}
{{ end }}
